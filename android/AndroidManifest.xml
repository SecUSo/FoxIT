<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.foxyourprivacy.f0x1t">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:name=".FoxITApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo3"
        android:label="@string/app_name"
        android:minSdkVersion="17"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.Home"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name="BackgroundService"
            android:icon="@drawable/back"
            android:label="@string/app_name"
            >
        </service>

        <activity
            android:name=".activities.Analysis"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AnalysisResults"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.LectionActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.LectionListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ClassListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.TrophyRoomActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.OnboardingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AnimationLauncher"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SettingsActivity"
            android:screenOrientation="portrait" />

    </application>
</manifest>
