<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/trophy_frame"
        android:layout_height="wrap_content"
        android:background="#dad7b4"
        app:layout_widthPercent="100%">

        <ImageView
            android:id="@+id/grid_item_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10px"
            android:layout_weight="15.50"
            android:adjustViewBounds="true"
            android:contentDescription="groÃŸes Eichelbild"
            android:longClickable="false"
            android:src="@mipmap/test_trophy">
        </ImageView>

        <TextView
            android:id="@+id/grid_item_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grid_item_image"
            android:layout_centerHorizontal="true"
            android:text="Medium Text"
            android:textColor="@color/abc_search_url_text_pressed" />

        <TextView
            android:id="@+id/text_animation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baumhaus Kapitalist"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/background_dark"
            android:shadowDx="5"
            android:elevation="11dp"
            android:shadowRadius="5"
            android:shadowDy="5"
            android:background="@color/yellow_animation"
            android:layout_above="@+id/grid_item_label"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp" />

    </RelativeLayout>

</android.support.percent.PercentRelativeLayout>