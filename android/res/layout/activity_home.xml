<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <include layout="@layout/toolbar_actionbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/underToolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/underToolbar"
        android:id="@+id/screenFrame"
        android:background="@color/creme">

        <RelativeLayout
            android:id="@+id/firstLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/secondView"
            android:layout_alignBottom="@+id/fourthView"
            android:orientation="vertical"
            android:elevation="2dp"
            android:layout_margin="8dp"
            android:weightSum="1"
            android:background="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/schoolIcon"
                android:src="@drawable/lection"
                android:scaleType="fitEnd"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true">
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Lektionen"
                android:id="@+id/textView"
                android:layout_marginTop="80dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="25dp"
                android:textAlignment="center" />
        </RelativeLayout>

        <View
            android:id="@+id/secondView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:id="@+id/thirdLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/secondView"
            android:layout_alignBottom="@+id/fourthView"
            android:orientation="vertical"
            android:elevation="2dp"
            android:layout_margin="8dp"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Fuchs"
                android:id="@+id/textView2"
                android:layout_marginTop="80dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="25dp"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gamingIcon"
                android:src="@drawable/paw"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="25dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fifthLayout"
            android:orientation="vertical"
            android:layout_alignEnd="@+id/secondView"
            android:layout_below="@+id/fourthView"
            android:elevation="2dp"
            android:layout_margin="8dp"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Erfolge"
                android:id="@+id/textView3"
                android:layout_marginTop="80dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="25dp"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/trophyIcon"
                android:layout_below="@+id/textView3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:src="@mipmap/trophy_2"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/fourthView"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sixtLayout"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/fourthView"
            android:layout_toEndOf="@+id/secondView"
            android:elevation="2dp"
            android:layout_margin="8dp"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Einstellungen"
                android:id="@+id/textView4"
                android:layout_marginTop="80dp"
                android:layout_alignParentTop="true"
                android:textSize="25dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_marginTop="25dp"
                android:src="@drawable/account"
                android:layout_below="@+id/textView4"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>


