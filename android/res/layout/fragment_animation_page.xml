<?xml version="1.0"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.foxyourprivacy.f0x1t.Animation.ButtonFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_animation"
            style="@style/button_text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/button_animation"
            android:longClickable="false"
            android:text="Test"
            android:textAlignment="center"
            android:textSize="22dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button_animation"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="22dp"
            android:elevation="18dp"
            android:paddingRight="5dp"
            app:srcCompat="@drawable/arrow_swipe" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imageView6"
            android:layout_marginBottom="22dp"
            android:elevation="18dp"
            android:paddingRight="5dp"
            android:rotation="180"
            app:srcCompat="@drawable/arrow_swipe" />

    </RelativeLayout>

</RelativeLayout>