<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welcome">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hallo! Um das Beste aus unserer App für dich herauszuholen würden wir gerne einige Einstellungen und Apps scannen, die du nutzt."
        android:layout_alignParentStart="true"
        android:layout_margin="55dp" />

    <Button
        android:id="@+id/button_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Ok, los geht's!"
        android:onClick="acceptAnalysis" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ueberspringen"
        android:id="@+id/skipAnalysis"
        android:typeface="normal"
        android:textSize="10dp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <include layout="@layout/toolbar_actionbar" />


</RelativeLayout>
