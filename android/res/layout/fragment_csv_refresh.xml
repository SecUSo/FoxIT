<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Beschreibungen aktualisieren:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/button_class_csv"
            android:layout_alignStart="@+id/textView7"
            android:layout_marginTop="30dp"
            android:id="@+id/textView9"
            android:gravity="center" />

        <TextView
            android:text="Kurse aktualisieren:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="142dp"
            android:id="@+id/textView7"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:gravity="center" />

        <Button
            android:layout_height="wrap_content"
            android:id="@+id/button_class_csv"
            android:elevation="0dp"
            android:layout_width="45dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/textView7"
            android:layout_alignStart="@+id/button_description_csv" />

        <Button
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_description_csv"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/textView9"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Die Datenbank exportieren:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="47dp"
            android:id="@+id/textView6"
            android:gravity="center"
            android:layout_below="@+id/button_description_csv"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_exportDB"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/button_description_csv"
            android:layout_marginBottom="38dp" />
    </RelativeLayout>
</LinearLayout>