<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/setting_value_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@+id/setting_headline_frame">
        <ScrollView
            android:id="@+id/settings_value_scroller"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:fillViewport="true"
            android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/text_setting_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wert"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:minHeight="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp" />
        </ScrollView>
        <ScrollView
            android:id="@+id/settings_description_scroller"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settings_value_scroller"
            android:scrollbars="vertical"
            android:fillViewport="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/text_setting_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beschreibung"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:minHeight="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp" />
        </ScrollView>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_headline_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/creme"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/text_setting_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_app_icon"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:minHeight="30dp"
            android:layout_alignParentEnd="true"
            android:background="@color/creme"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp" />

        <TextView
            android:id="@+id/text_setting_original"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_setting_name"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:minHeight="25dp"
            android:layout_alignParentEnd="true"
            android:background="@color/creme"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="6dp"/>


    </RelativeLayout>

</RelativeLayout>