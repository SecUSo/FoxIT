<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@color/colorPrimaryDark"
            android:padding="2dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="330dp"
                android:layout_height="290dp"
                android:layout_gravity="center"
                android:background="@color/creme">

                <ImageView
                    android:id="@+id/image_acorn_symbol"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_above="@+id/text_acorn_count"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="Der Baumhaus Kapitalist"
                    android:src="@mipmap/test_trophy" />

                <TextView
                    android:id="@+id/text_trophy_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="top|center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Baumhaus Kapitalist"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/material_deep_teal_200"
                    android:textSize="28dp"
                    android:layout_marginBottom="5dp" />
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>