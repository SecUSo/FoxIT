<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="40dp">


    <RelativeLayout
        android:id="@+id/permission_headline_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aab7df"
        android:clickable="true">

        <TextView
            android:id="@+id/text_permission_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/text_permission_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/image_app_icon"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/image_app_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:adjustViewBounds="true"
            android:longClickable="false"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:minHeight="40dp"
            android:minWidth="40dp"
            android:src="@mipmap/ic_cat"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/permission_headline_frame">

        <TextView
            android:id="@+id/text_permission_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/image_app_icon"
            android:text="Hier wird bald eine Beschreibung der Permission stehen! "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp" />
    </ScrollView>

</RelativeLayout>