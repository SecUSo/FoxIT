<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:minHeight="40dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/permission_headline_frame"
        android:background="#aab7df"
        android:clickable="true">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/text_permission_headline"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/text_permission_name"
        android:text=" "
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image_app_icon" />

        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_app_icon"
        android:maxHeight="40dp"
        android:maxWidth="40dp"
        android:src="@mipmap/ic_cat"
        android:longClickable="false"
        android:adjustViewBounds="true"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp" />
    </RelativeLayout>


    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:id="@+id/scrollView"
        android:layout_below="@+id/permission_headline_frame"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Hier wird bald eine Beschreibung der Permission stehen! "
            android:id="@+id/text_permission_description"
            android:layout_below="@+id/image_app_icon"
            android:layout_alignParentStart="true" />
    </ScrollView>

</RelativeLayout>
